<h1><%= @user.username %></h1>

<div class="profile">
  <%= image_tag @user.image_url, class: "profile-thumbnail" %>
  <%= render "users/profile", user: @user %>
</div>

<div class="matches">
<h3>Match History</h3>

<div>
  <% if current_user.requested?(@user) %> 
    <p> You have an open match request with <%= @user.username %></p>
    <p>
      <%= link_to(
        "Match Request",
        match_request_path(current_user.requested_match(@user))
      ) %>
    </p>
  <% elsif signed_in? %>
    <%= link_to(
      "Request a match with #{@user.username}",
      new_user_match_request_path(@user)
    ) %>
  <% end %>
</div>
</div>
