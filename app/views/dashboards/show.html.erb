<h1><%= current_user.username %>'s Dashboard</h1>

<div class="profile">
  <%= image_tag current_user.image_url, class: "profile-thumbnail" %>
  <%= render "users/profile", user: current_user %>
</div>

<div class="matches">
<h3>Your Recent Matches</h3>
<%= render current_user.matches %>

<h3>Pending Match Requests</h3>
<h5>Incoming Match Requests</h5>
<ul>
  <% current_user.incoming_match_requests_pending.each do |incoming_match_request| %>
    <li>
      <p>
        <%= incoming_match_request.requester_username %>
        (<%= incoming_match_request.requester_elo %>) 
        would like to
        have a match with you.
      </p>
      <p><%= link_to "Go to Request", incoming_match_request %></p>
    </li>
  <% end %>
</ul>
<h5>Outgoing Match Requests</h5>
<ul>
  <% current_user.outgoing_match_requests_pending.each do |outgoing_match_request| %>
    <li>
      <p>
        Request with <%= outgoing_match_request.opponent_username %>
        (<% outgoing_match_request.opponent_elo %>)
      </p>
      <p><%= link_to "Go to Request", outgoing_match_request %></p>
    </li>
  <% end %>
</ul>
</div>
